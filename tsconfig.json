  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "target": "ES2022",
