{
  "name": "app",
  "version": "0.0.5",
  "description": "personal website related to bangumi",
  "private": true,
  "type": "module",
  "main": "src/main.ts",
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "format": "prettier -w ./",
    "lint": "eslint --ext ts ./",
    "build": "tsc --noEmit",
    "start": "nodemon",
    "dev": "yarn start --watch",
    "test": "ava",
    "prepare": "husky install"
  },
  "author": {
    "name": "trim21",
    "email": "trim21me@gmail.com",
    "url": "https://github.com/trim21"
  },
  "license": "MIT",
  "dependencies": {
    "@esbuild-kit/esm-loader": "^2.5.5",
    "@fastify/error": "^3.3.0",
    "@sinclair/typebox": "~0.28.20",
    "dayjs": "^1.11.8",
    "fastify": "^4.19.0",
    "got": "^13.0.0",
    "ioredis": "^5.3.2",
    "nanoid": "^4.0.2",
    "p-limit": "^4.0.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0"
  },
  "devDependencies": {
    "@types/ioredis-mock": "^8.2.2",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "ava": "^5.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.3",
    "eslint": "^8.44.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typescript": "~5.1.6"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "**.test.ts",
      ".git",
      "node_modules/**"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "execMap": {
      "ts": "node --no-warnings -r dotenv/config --loader @esbuild-kit/esm-loader --enable-source-maps"
    },
    "ext": "ts,js,json,html"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "ava": {
    "files": [
      "tests/**"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "-r",
      "dotenv/config",
      "--loader=@esbuild-kit/esm-loader"
    ]
  }
}
