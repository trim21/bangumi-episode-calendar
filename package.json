{
  "name": "app",
  "version": "0.0.5",
  "description": "personal website related to bangumi",
  "private": true,
  "type": "module",
  "main": "src/main.ts",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": "^20.6.1"
  },
  "scripts": {
    "format": "prettier -w ./",
    "lint": "eslint --ext ts ./",
    "build": "tsc --noEmit",
    "start": "nodemon",
    "dev": "yarn start --watch",
    "test": "cross-env NODE_OPTIONS=\"-r dotenv/config --loader=@esbuild-kit/esm-loader\" ava",
    "prepare": "husky install"
  },
  "author": {
    "name": "trim21",
    "email": "trim21me@gmail.com",
    "url": "https://github.com/trim21"
  },
  "license": "MIT",
  "dependencies": {
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@fastify/error": "^4.0.0",
    "@sinclair/typebox": "~0.33.7",
    "dayjs": "^1.11.13",
    "fastify": "^4.28.1",
    "got": "^14.4.2",
    "ioredis": "^5.4.1",
    "nanoid": "^5.0.7",
    "p-limit": "^6.1.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "@types/ioredis-mock": "^8.2.5",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "ava": "^5.3.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "~5.5.4"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "**.test.ts",
      ".git",
      "node_modules/**"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "execMap": {
      "ts": "node --no-warnings -r dotenv/config --loader @esbuild-kit/esm-loader --enable-source-maps"
    },
    "ext": "ts,js,json,html"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "ava": {
    "files": [
      "tests/**"
    ],
    "extensions": {
      "ts": "module"
    }
  }
}
