{
  "name": "bangumi-contrib",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "type": "module",
  "main": "src/main.ts",
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "format": "prettier -w ./",
    "lint": "eslint --ext ts ./",
    "build": "tsc",
    "start": "nodemon",
    "dev": "yarn start --watch",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "**.test.ts",
      ".git",
      "node_modules/**"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "execMap": {
      "ts": "node --no-warnings -r dotenv/config --loader ts-node/esm --experimental-specifier-resolution=node --enable-source-maps"
    },
    "ext": "ts,js,json,html"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.11.16",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.30.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "typescript": "~4.9.4"
  },
  "dependencies": {
    "@fastify/error": "^3.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "got": "^12.5.3",
    "ioredis": "^5.2.4",
    "nanoid": "^4.0.0",
    "p-limit": "^4.0.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "ts-node": "^10.9.1"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
