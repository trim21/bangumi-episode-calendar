{
  "name": "app",
  "version": "0.0.5",
  "description": "personal website related to bangumi",
  "private": true,
  "type": "module",
  "main": "src/main.ts",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": "^20.6.1"
  },
  "scripts": {
    "format": "prettier -w ./",
    "lint": "eslint --ext ts ./",
    "build": "node build.mjs",
    "start": "nodemon",
    "dev": "yarn start --watch",
    "test": "vitest --run",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "author": {
    "name": "trim21",
    "email": "trim21me@gmail.com",
    "url": "https://github.com/trim21"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/error": "^4.0.0",
    "@sinclair/typebox": "~0.33.14",
    "dayjs": "^1.11.13",
    "fastify": "^4.28.1",
    "got": "^14.4.2",
    "ioredis": "^5.4.1",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.7",
    "p-limit": "^6.1.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/ioredis-mock": "^8.2.5",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.16.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "esbuild-node-externals": "^1.15.0",
    "eslint": "^9.13.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "~5.5.4",
    "vitest": "^2.1.4"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "**.test.ts",
      ".git",
      "node_modules/**"
    ],
    "watch": [
      "src",
      ".env"
    ],
    "execMap": {
      "ts": "node --no-warnings -r dotenv/config --import tsx/esm"
    },
    "ext": "ts,js,json,html"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "ava": {
    "files": [
      "tests/**"
    ],
    "extensions": {
      "ts": "module"
    }
  }
}
